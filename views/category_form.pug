extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Name' name='name' required value=(undefined===category ? '' : category.name) )
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Description' name='description' required value=(undefined===category ? '' : category.description))
    if category
      div.form-group
        label(for='password') Admin Password:
        input#password.form-control(name='password')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
